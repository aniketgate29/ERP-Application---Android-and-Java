<?xml version="1.0" encoding="utf-8"?>
<!-- activity_main.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/logo"
        android:alpha="0.2"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Services"
        android:textColor="@color/primaryDarkColor"
        android:textStyle="bold"
        android:textSize="25dp">

    </TextView>
    <!-- Service Details Input Fields -->

    <EditText
        android:id="@+id/editServiceName"
        android:layout_width="400dp"
        android:layout_height="78dp"
        android:hint="Service Name" />

    <EditText
        android:id="@+id/editDescription"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/editServiceName"
        android:layout_marginTop="16dp"
        android:hint="Description" />

    <EditText
        android:id="@+id/editHSN"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/editDescription"
        android:layout_marginTop="16dp"
        android:hint="HSN" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GST no:"
        android:layout_below="@+id/editHSN"/>
    <Spinner

        android:id="@+id/gstBox"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/editHSN"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/editRate"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/gstBox"
        android:layout_marginTop="16dp"
        android:hint="Rate" />

    <EditText
        android:id="@+id/editTotal"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/editRate"
        android:layout_marginTop="16dp"
        android:hint="Total" />

    <!-- Buttons: Add, Search, Update -->

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="390dp"
        android:layout_height="82dp"
        android:layout_below="@+id/editTotal"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="72dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="-51dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/design_default_color_secondary_variant"
            android:text="Add"
            android:textColorLink="#4A888F" />

        <Button
            android:id="@+id/btnCancel6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/design_default_color_secondary_variant"
            android:text="Cancel" />

    </LinearLayout>

</RelativeLayout>

