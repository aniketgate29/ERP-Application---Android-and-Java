<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/logo"
        android:alpha="0.2"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true">

    <Button
        android:id="@+id/productReportButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Product"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="16dp"/>

    <!-- Sales Report Button -->
    <Button
        android:id="@+id/salesReportButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Sales"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="16dp"/>

    <!-- Purchase Report Button -->
    <Button
        android:id="@+id/purchaseReportButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Purchase"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="16dp"/>

    <!-- Challan in Report Button -->
    <Button
        android:id="@+id/challanInReportButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="ChallanIn"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="16dp"/>

    <!-- Challan out Report Button -->
    <Button
        android:id="@+id/challanOutReportButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="ChallanOut"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="16dp"/>

</LinearLayout>
</RelativeLayout>