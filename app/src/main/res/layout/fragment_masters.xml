<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/logo"
        android:alpha="0.2"
         />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <!-- Add Unit Button -->
        <Button
            android:id="@+id/addUnitButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:text="Add Unit"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
        <!-- Add Type Button -->
        <Button
            android:id="@+id/addTypeButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Add Type"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <!-- Add Employee Button -->
        <Button
            android:id="@+id/addEmployeeButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Add Employee"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <!-- Add Batch Button -->
        <Button
            android:id="@+id/addBatchButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Add Batch"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <!-- Create Ledger Button -->
        <Button
            android:id="@+id/createLedgerButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Create Ledger"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <!-- Add Product Button -->
        <Button
            android:id="@+id/addProductButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Add Product"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <!-- Add Service Button -->
        <Button
            android:id="@+id/addServiceButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Add Service"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <!-- Add Crop Button -->
        <Button
            android:id="@+id/addCropButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Add Crop"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <!-- Add Godown Button -->
        <Button
            android:id="@+id/addGodownButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Add Godown"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <!-- Company Master Button -->
        <Button
            android:id="@+id/companyMasterButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Company Master"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </LinearLayout>
</RelativeLayout>
