<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/logo"
        android:alpha="0.2"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true">

    <!-- Chalan In Button -->
    <Button
        android:id="@+id/chalanInButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Chalan In"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="16dp"/>

    <!-- Chalan Out Button -->
    <Button
        android:id="@+id/chalanOutButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Chalan Out"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="16dp"/>

    <!-- P.O In Button -->
    <Button
        android:id="@+id/poInButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Purchase Order"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="16dp"/>

    <!-- P.O Out Button -->
    <Button
        android:id="@+id/poOutButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Sales Order"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="16dp"/>

    <!-- Quotation Button -->
    <Button
        android:id="@+id/quotationButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Quotation"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="16dp"/>

</LinearLayout>
</RelativeLayout>